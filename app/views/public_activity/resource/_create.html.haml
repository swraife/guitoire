.activity__subject
  = link_to activity.owner.name, user_songs_path(activity.owner)
  = 'added a new'
  = activity.trackable.resourceable.display_type_name
  = 'to'
  = link_to activity.recipient.name, activity.recipient
  = ':'
.activity__timestamp
  %i.fa.fa-clock-o
  = time_ago_in_words(activity.created_at)
  = 'ago'
.activity__content
  - download_target = activity.trackable.resourceable.displayable_in_browser? ? '_blank' : '_top'
  = link_to activity.trackable.resourceable.url, target: download_target do
    %i{class: "fa #{activity.trackable.resourceable.icon}"}
    = activity.trackable.resourceable.url_name
