%li.set_list_song{id: "set_list_song_#{set_list_song.id}" }
  = link_to set_list_song.song do
    %i.fa.fa-link
  = set_list_song.song.name
  '--'
  = set_list_song.sort_value
  = form_for set_list_song, method: :delete, remote: true, html: {class: 'inl-block right'} do |f|
    = button_tag type: 'submit', class: 'btn btn-times inl-block' do
      %i.fa.fa-times