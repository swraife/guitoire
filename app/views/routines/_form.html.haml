= form_for @routine do |f|
  .routine-owner{class: "#{'hide' unless user_has_groups(current_user)}"}
    = f.label :owner
    = f.select :global_owner,
               options_from_collection_for_select(current_user.actors, :global_id, :name, @routine.owner)

  = f.label :name
  = f.text_field :name

  = f.label :description
  = f.text_area :description

  = f.submit 'Save Set List'
